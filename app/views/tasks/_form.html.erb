<div class='form'>
  <%= form_for [@project, @task] do |f| %>

    <strong><%= f.label :title %></strong>
    <p><%= f.text_field :title %></p>

    <strong><%= f.label :description %></strong>
    <p><%= f.text_area :description, size: "80x15" %></p>

    <strong><%= f.label :assigned_to %></strong>
    <p><%= f.text_field :assigned_to %></p>

    <strong><%= f.label :due %></strong>
    <p><%= f.text_field :due %></p>

    <p><%= f.submit %></p>

  <% end %>
</div>